<div class="container mt-5">
  <h1 class="page-title text-center">Mon Profil</h1>
<div class="row justify-content-center">
      <div class="col-8 shadow p-5 mb-5 bg-body rounded">

  <%= form_with model: @user, url: profile_path, method: :patch, local: true do |f| %>
    <div class="row mb-3">
      <div class="col-md-6">
        <strong><%= f.label :first_name, "First name", class: "form-label" %></strong>
        <%= f.text_field :first_name, class: "form-control", required: true %>
      </div>
      <div class="col-md-6">
        <strong><%= f.label :last_name, "Last name", class: "form-label" %></strong>
        <%= f.text_field :last_name, class: "form-control", required: true %>
      </div>
    </div>

    <div class="row mb-3">
      <div class="col-md-4">
        <strong><%= f.label :age, "Age", class: "form-label" %></strong>
        <%= f.number_field :age, class: "form-control", min: 0 %>
      </div>
      <div class="col-md-4">
        <strong><%= f.label :gender, "Gender", class: "form-label" %></strong>
        <%= f.select :gender, ["Homme", "Femme", "Autre"], { include_blank: "Select" }, class: "form-select" %>
      </div>
      <div class="col-md-4">
        <strong><%= f.label :level, "Level", class: "form-label" %></strong>
        <%= f.select :level, ["Débutant", "Intermédiaire", "Avancé"], { include_blank: "Select" }, class: "form-select" %>
      </div>
    </div>

    <div class="row mb-3">
      <div class="col-md-6">
        <strong><%= f.label :height, "Height (cm)", class: "form-label" %></strong>
        <%= f.number_field :height, class: "form-control", min: 0 %>
      </div>
      <div class="col-md-6">
        <strong><%= f.label :weight, "Weight (kg)", class: "form-label" %></strong>
        <%= f.number_field :weight, class: "form-control", min: 0 %>
      </div>
    </div>

    <div class="mb-3">
      <strong><%= f.label :conditions, "Conditions", class: "form-label" %></strong>
      <%= f.text_area :conditions, class: "form-control", placeholder: "Separate by commas", rows: 3 %>
      <small class="text-muted">Example: Asthma, Sprained ankle</small>
    </div>

    <div class="mb-3">
      <strong><%= f.label :availability, "Availability", class: "form-label" %></strong>
      <%= f.select :availability, [["Morning", "morning"], ["Afternoon", "afternoon"], ["Evening", "evening"]], {}, { multiple: true, class: "form-select" } %>
      <small class="text-muted">Hold Ctrl/Cmd to select multiple ranges</small>
    </div>

    <div class="text-center">
      <%= f.submit "Save my profil", class: "btn btn-dark m" %>
    </div>
  <% end %>
  </div>
  </div>
</div>
