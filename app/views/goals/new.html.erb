<%= simple_form_for [@event, @goal], html: { class: "mt-4 container col-6" } do |f| %>
  <h1 class="text-center mb-4">Set your goal</h1>
  <%= f.input :start_date, :as => :date,
    label: "When can you start your training program ?",
    input_html: { class: "form-control" },
    wrapper_html: { class: "mb-3" }%>
  <%= f.time :goal_time
    # label: "What is your goal?",
    # input_html: { class: "form-control" },
    # default: Time.parse('00:00'),
    # hint: "hours"
  %>
  <%= f.time :max_time_per_day, :as => :time,
    label: "How many hours a day can you train ?",
    input_html: { class: "form-control" },
    default: Time.parse('00:00'),
    :minute_step => 15
  %>
  <%= f.button :submit, 'Generate your program', class: 'btn btn-primary mt-3' %>
<% end %>
